{
  "name": "raas",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter ./frontend... dev",
    "build": "pnpm --filter ./frontend... build",
    "start": "pnpm --filter ./frontend... start",
    "lint": "pnpm --filter ./frontend... lint",
    "compile": "hardhat compile",
    "dev:web": "pnpm --filter ./frontend dev",
    "build:web": "pnpm --filter ./frontend build",
    "deploy:sepolia": "hardhat run scripts/deploy-all.ts --network sepolia",
    "deploy:pyusd:sepolia": "hardhat run scripts/deploy-pyusd-rail.ts --network sepolia"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4",
    "@nomicfoundation/hardhat-toolbox": "6.1.0",
    "@types/node": "^24.8.1",
    "dotenv": "16.4.5",
    "ethers": "^6",
    "hardhat": "^3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "hardhat": "3.0.7",
      "ethers": "6.15.0",
      "@nomiclabs/hardhat-ethers": "npm:@nomicfoundation/hardhat-ethers@4.0.2",
      "@ethersproject/*": "npm:ethers@6.15.0"
    }
  },
  "packageManager": "pnpm@10.17.1"
}
